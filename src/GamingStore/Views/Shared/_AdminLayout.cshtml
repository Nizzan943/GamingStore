@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!doctype html>
<html  lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>GamingStore - Admin CP</title>
    <meta name="description" content="GamingStore - Admin Control Panel">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/css/administration/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/css/administration/bar_chart_monthly_revenue.css">
    <link rel="stylesheet" href="~/css/administration/style.css">
    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
    <link href="https://cdn.jsdelivr.net/npm/chartist@0.11.0/dist/chartist.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/jqvmap.min.css" rel="stylesheet">

</head>

<body>
    <!-- Left Panel -->
    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">
            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a class="nav-link" asp-controller="Administration" asp-action="Index">
                            <i class="menu-icon fa fa-laptop"></i>Dashboard
                        </a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-cogs"></i>User Settings</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li>
                                <i class="fa fa-puzzle-piece"></i> <a class="nav-link" asp-controller="Administration" asp-action="ListUsers">List Users</a>
                            </li>
                            <li>
                                <i class="fa fa-id-badge"></i> <a class="nav-link" asp-controller="Administration" asp-action="ListRoles">List Roles</a>
                            </li>
                        </ul>

                    <li>
                        <a class="nav-link" asp-controller="Administration" asp-action="ListOrders"><i class="menu-icon ti-receipt "></i>Orders</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Administration" asp-action="ListItems"><i class="menu-icon fa fa-barcode"></i>Products</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Administration" asp-action="ListStores"><i class="menu-icon fa fa-caret-square-o-up"></i>Stores</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Administration" asp-action="ListCategories"><i class="menu-icon fa fa-caret-square-o-up"></i>Categories</a>
                    </li>

                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside>
    <!-- /#left-panel -->
    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">
        <!-- Header-->
        <header id="header" class="header">
            <div class="top-left">
                <div class="navbar-header">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Logo">
                    </a>
                    <a class="navbar-brand hidden" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Logo">
                    </a>
                </div>
            </div>
            <div class="top-right">
                <div class="header-menu">
                    <div class="header-left">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </header>
        <!-- /#header -->
        <!-- Content -->
        <main role="main">
            <div class="content">
                <div class="animated fadeIn">
                    @RenderBody()
                </div>
            </div>
        </main>
        <!-- /.content -->
        <div class="clearfix"></div>
        <!-- Footer -->
    </div>
    <!-- /#right-panel -->
    <!-- Scripts -->
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="/lib/notifyjs/notify.min.js"></script>
    <!-- D3 js-->
    <script src="https://d3js.org/d3.v6.min.js"></script>
    <script src="https://d3js.org/d3-format.v2.min.js"></script>
    <script src="https://d3js.org/d3-path.v2.min.js"></script>
    <script src="https://d3js.org/d3-shape.v2.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>