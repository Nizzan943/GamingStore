@*@model GamingStore.ViewModels.Items.ItemViewModel*@
@model GamingStore.Models.Item

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/single_product.css">
</head>
<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    <li data-image="/@Model.ImageUrl/1.jpg"><img src="/@Model.ImageUrl/1.jpg" alt=""></li>
                    <li data-image="/@Model.ImageUrl/2.jpg"><img src="/@Model.ImageUrl/2.jpg" alt=""></li>
                    <li data-image="/@Model.ImageUrl/3.jpg"><img src="/@Model.ImageUrl/3.jpg" alt=""></li>
                </ul>
            </div>

            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected"><img src="/@Model.ImageUrl/1.jpg" alt="" style="max-width: 80%"></div>
            </div>

            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">
                    <div class="product_category"> @Html.DisplayFor(c => Model.Category.Name)</div>
                    <div class="product_name">@Model.Title</div>
                    <div class="product_text"><p>@Model.Description</p></div>
                    <!-- Item Quantity -->
                    <div class="order_info d-flex flex-row">

                        @Html.Hidden("itemId", Model.Id)
                        <div class="clearfix" style="z-index: 1000;">

                            <div class="product_quantity clearfix">
                                <span>Quantity: </span>
                                <input id="quantity_input" name="quantity" type="text" pattern="[0-9]*">
                                <input id="product_id" name="id" type="hidden" value="@Model.Id">
                            </div>
                        </div>
                    </div>
                    <!-- Item price -->

                    <div class="order_info d-flex flex-row">
                        <div class="product_price">@Html.DisplayFor(model => model.Price)$</div>
                    </div>

                    <!-- Item Add-To-Cart-Button -->
                    <div class="order_info d-flex flex-row">

                        @Html.Hidden("itemId", Model.Id)
                        <div class="clearfix" style="z-index: 1000;">
                        <div class="button_container">
                            <input type="submit" value="Add to Cart" name="submit" class="button cart_button" style="background: linear-gradient(90deg, rgba(82,113,255,1) 0%, rgba(52,107,182,1) 66%, rgba(53,92,187,1) 91%); ">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts{
    <script src="/js/product_details.js"></script>

}
