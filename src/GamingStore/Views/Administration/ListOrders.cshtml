@using GamingStore.Data
@using GamingStore.Models.Relationships
@model GamingStore.ViewModels.Administration.ListOrdersViewModel
@inject GamingStoreContext GamingStoreContext
@addTagHelper *, Vereyon.Web.FlashMessage

@{
    ViewData["Title"] = "Admin Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <strong class="card-title">Orders</strong>
                    </div>
                    <div class="col">
                        <div class="d-flex justify-content-center" id="flash_message"> <flash dismissable="true" /></div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().User)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().Store)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().OrderDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().State)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().ShippingAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().ShippingMethod)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().Payment)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders.First().OrderItems)
                            </th>
                            <th width="8%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Order order in Model.Orders)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.User)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.Store)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.OrderDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.ShippingAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.ShippingMethod)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.ShippingAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelOrder => order.Payment)
                                </td>
                                @foreach (OrderItem item in order.OrderItems)
                                {
                                    <lable>@item</lable>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        },
            5000); // <-- time in milliseconds
    </script>
    <script src="/lib/jquery/dist/jquery.js"></script>
}