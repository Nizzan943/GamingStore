@using GamingStore.Contracts;

@{
    ViewData["Title"] = "Login Page";
}

<body class="text-center">
    <form class="form-signin" style="width: 300px; height: 430px;padding-top: 100px;margin: auto">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" style="margin-bottom: 16px" placeholder="Email address" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p>Don't have an account? <a asp-controller="Users" asp-action="Create">Register Here</a></p>
        <p class="mt-5 mb-3 text-muted">&copy; N.Y.O Technologies</p>
    </form>
</body>