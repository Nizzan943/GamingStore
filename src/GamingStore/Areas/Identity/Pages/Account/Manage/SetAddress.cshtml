@page
@model SetAddressModel
@{
    ViewData["Title"] = "Address";
    ViewData["ActivePage"] = ManageNavPages.SetAddress;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <p>You can set up your default address here.</p>
        <form id="email-form" method="post">
            <div class="form-group">
                <label asp-for="Address.FullName">Full Name</label>
                <input asp-for="Address.FullName" class="form-control" required="required" />
                <span asp-validation-for="Address.FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address.Address1">Address</label>
                <input asp-for="Address.Address1" class="form-control" required="required" />
                <span asp-validation-for="Address.Address1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address.City">City</label>
                <input asp-for="Address.City" class="form-control" required="required" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address.PostalCode">Postal Code</label>
                <input asp-for="Address.PostalCode" class="form-control" required="required" />
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address.Country">Country</label>
                <input asp-for="Address.Country" class="form-control" value="Israel" , disabled="disabled" />
                <span asp-validation-for="Address.Country" class="text-danger"></span>
            </div>

            <button type="submit" asp-page-handler="SaveAddress" name="submit" class="btn btn-primary">Save Address</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}